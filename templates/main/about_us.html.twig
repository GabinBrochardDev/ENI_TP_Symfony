{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
    <h2>{{ title }}</h2>

    <section>
        {% for personne in team %}
            <article>
                <h3>{{ personne.firstname }} {{ personne.lastname }}
                    {% if personne.firstname is same as 'Fabien' %}
                       ‚ù§
                    {% endif %}
                </h3>
                <img class="team-picture" src="{{personne.picture}}" alt="{{ personne.firstname }} {{ personne.lastname }}" />
                <p>{{ personne.dateOfBirth | date('d/m/Y') }}</p>
                <p>{{ personne.creatorOf }}</p>
                <p>{{ personne.description }}</p>
            </article>
        {% endfor %}
    </section>

{% endblock %}